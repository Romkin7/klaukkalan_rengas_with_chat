<% layout('layout') -%>
<section>
	<div class="ui container">
		<div class="ui stackable centered grid">
			<div class="six wide column">
				<div class="ui page header">
					<h2>Rekisteröidy</h2>
					<hr>
					<form action="/rekisteroidy" method="POST" class="ui form">
						<div class="field">
							<label for="firstname">Etunimi *</label>
							<input id="firstname" type="text" name="firstname" placeholder="Etunimi *">
						</div>
						<div class="field">
							<label for="lastname">Sukunimi *</label>
							<input type="text" id="lastname" name="lastname" placeholder="Sukunimi *">
						</div>
						<div class="field">
							<label for="email">Sähköposti *</label>
							<input type="email" id="email" name="email" placeholder="Sähköposti *">
						</div>
						<div class="field">
							<label for="password">Salasana *</label>
							<input type="password" id="password" name="password" placeholder="Salasana *">
						</div>
						<button class="ui button" type="submit">Submit</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>