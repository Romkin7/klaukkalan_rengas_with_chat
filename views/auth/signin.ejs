<% layout('layout') -%>
<section>
	<div class="ui container">
		<div class="ui stackable centered grid">
			<div class="six wide column">
				<div class="ui page header">
					<h2>Kirjaudu sisään</h2>
					<hr>
					<form class="ui form" action="/kirjaudu-sisaan" method="POST">
						<div class="field">
							<label for="email">Sähköposti *</label>
							<input type="email" name="email" id="email" placeholder="Sähköposti *">
						</div>
						<div class="field">
							<label for="password">Salasana *</label>
							<input type="password" name="password" id="password" placeholder="Salasana *">
						</div>
						<button class="ui green button" type="submit">Kirjaudu sisään</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>