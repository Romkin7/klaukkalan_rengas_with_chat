<div id="topNav" class="ui basic top fixed icon menu">
  <a id="toggle" class="item">
    <i class="orange sidebar icon"></i>
    Valikko
  </a>
  <div class="ui left item navItem">
    <div class="item">
      <a href="/">Etusivu</a>
    </div>
    <div class="ui dropdown item">
        Renkaat
        <i class="dropdown icon"></i>
        <div class="menu">
          <div class="item"><a href="/renkaat?category=Kesärenkaat&page=1">Kesärenkaat</a></div>
          <div class="item"><a href="/renkaat?category=Talvirenkaat_Nasta&page=1">Talvirenkaat nasta</a></div>
          <div class="item"><a href="/renkaat?category=Talvirenkaat_Kitka&page=1">Talvirenkaat kitka</a></div>
        </div>
      </div>
  </div>
  <div class="ui right item navItem">
    <% if(user && user.admin.isAdmin) { %>
      <div class="item">
      <a href="/admin">
        <i class="fa fa-dashboard fa-fw" aria-hidden="true"></i> Hallintapaneeli
      </a>
    </div>
    <% } %>
    <div class="item">
      <a href="/hinnasto">
        Palvelu hinnasto
      </a>
    </div>
  </div>
</div>
<div id="messagesContainer" class="ui container">
  <div class="ui centered grid">
    <div class="ten wide column">
      <% if(error && error.length > 0) { %>
        <div class="ui negative message">
          <i class="close icon"></i>
          <div class="header">
          Ups!
        </div>
        <p><%= error %></p>
      </div>
      <% } %>
      <% if(success && success.length > 0) { %>
        <div class="ui success message">
          <i class="close icon"></i>
          <div class="header">
            Onnistui!
          </div>
          <p><%= success %></p>
        </div>
      <% } %>
    </div>
  </div>
</div>
