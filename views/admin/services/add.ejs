<% layout('admin') -%>
<section>
	<div class="ui container">
		<div class="ui stackable centered grid">
			<div class="fourteen wide column">
				<div class="ui page header">
					<h2><i class="fa fa-plus" aria-hidden="true"></i> Luo Rengaspalvelu / Rengastyö</h2>
					<hr>
				</div>
			</div>
			<div class="fourteen wide column">
				<div class="ui blue raised segment">
					<form class="ui form" action="/admin/services" method="POST">
						<div class="field">
							<div class="three fields">
								<div class="field">
									<label for="name">Nimi *</label>
									<input type="text" name="name" id="name" required placeholder="Nimi *">
								</div>
								<div class="field">
									<label for="type">Tyyppy *</label>
									<select id="type" name="type" class="ui fluid dropdown" required>
										<option value="">Valitse Tyyppi *</option>
										<option value="Rengas">Rengas</option> 
										<option value="Sarja">Sarja</option>
										<option value="Sarja / Kausi">Sarja / Kausi</option>
									</select>
								</div>
								<div class="field">
									<label for="category">Kategoria *</label>
									<select id="category" name="category" class="ui fluid dropdown" required>
										<option value="">Valitse Kategoria *</option>
										<option value="tyrehotel">Rengashotelli</option> 
										<option value="maintainance">Rengastyö</option>
										<option value="wash">Rengaspesu</option>
									</select>
								</div>
							</div>
						</div>
						<div class="field">
							<div class="three fields">
								<div class="field">
									<label for="unit_price">Hinta *</label>
									<input type="number" step="0.01" min="0" max="10000" id="unit_price" name="unit_price" placeholder="Hinta *" required>
								</div>
								<div class="field">
									<label for="vat">Alv *</label>
									<select class="ui fluid dropdown" required id="vat" name="vat">
										<option value="0.24">24%</option>
									</select>
								</div>
								<div class="field">
									<label for="discounted_unit_price">Alennettu hinta</label>
									<input type="number" name="discounted_unit_price" id="discounted_unit_price" value="0" step="0.01" min="0" max="10000">
								</div>
							</div>
						</div>
						<div class="field">
							<div class="three fields">
								<div class="field">
									<label for="tyre_size">Koko *</label>
									<select id="tyre_size" name="tyre_size" required class="ui fluid dropdown">
										<option value="">Valitse koko *</option>
										<option value="16">16</option>
										<option value="17' ja alle">17</option>
										<option value="18' ja yli">18</option>
										<option value="19">19</option>
									</select>
								</div>
								<div class="field">
									<label for="duration">Kesto *</label>
									<select id="duration" name="duration" required class="ui fluid dropdown">
										<option value="">Valitse kesto *</option>
										<option value="10">10 min</option>
										<option value="20">20 min</option>
										<option value="30">30 min</option>
										<option value="40">40 min</option>
									</select>
								</div>
								<div class="field">
									<label for="additional_info">Lisätietoa</label>
									<input type="text" name="additional_info" id="additional_info" placeholder="Lisätietoa">
								</div>
							</div>
						</div>
						<div class="field">
							<button type="submit" class="ui green button" id="serviceSubmitBtn"><i class="fa fa-plus"></i> Luo</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>