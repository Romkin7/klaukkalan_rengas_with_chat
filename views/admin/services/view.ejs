<% layout('admin') -%>
<section>
	<div class="ui container">
		<div class="ui stackable centered grid">
			<div class="fourteen wide column">
				<div class="ui page header">
					<h2><i class="fa fa-cubes" aria-hidden="true"></i> Rengastyöt / Rengaspalvelut</h2>
					<hr>
				</div>
			</div>
			<% if(tyreHotelServices.length > 0) { %>
			<div class="fourteen wide column">
				<div class="ui raised segment">
					<h4 class="black">Rengashotelli</h4>
					<table class="ui stackable orange table">
						<thead class="tablet desktop">
							<tr>
								<th>Palvelu</th>
								<th>Yksikkö</th>
								<th>Renkaan koko</th>
								<th>Hinta</th>
								<th>Muokkaa</th>
							</tr>
						</thead>
						<tbody id="datarow">
							<% tyreHotelServices.forEach(function(service) { %>
							<tr>
								<td><%= service.name %></td>
								<td><%= service.type === null ? "" : service.type %></td>
								<td><%= service.tyre_size %>" <%= service.tyre_size === 16 ? " ja alle" : " ja yli" %></td>
								<td><%= service.discounted_unit_price !== 0 ? service.discounted_unit_price+",00 €" : service.unit_price+",00 €" %></td>
								<td>
									<a class="ui yellow tiny button" href="/admin/services/<%= service._id %>"><i class="fa fa-edit" aria-hidden="true"></i></a>
									<form class="ui form" action="/admin/services/<%= service._id %>?_method=DELETE" method="POST">
										<div class="field">
											<input type="hidden" name="id" value="<%= service._id %>">
											<button type="submit" class="ui red tiny button"><i class="fa fa-trash" aria-hidden="true"></i></button>
										</div>
									</form>
								</td>
							</tr>
							<% }); %>
						</tbody>
					</table>
				</div>
			</div>
			<% } %>
			<% if(tyreServices.length > 0) { %>
			<div class="fourteen wide column">
				<div class="ui raised segment">
					<h4 class="black">Rengastyöt</h4>
					<table class="ui stackable orange table">
						<thead class="tablet desktop">
							<tr>
								<th>Palvelu</th>
								<th>Yksikkö</th>
								<th>Renkaan koko</th>
								<th>Hinta</th>
								<th>Muokkaa</th>
							</tr>
						</thead>
						<tbody id="datarow">
							<% tyreServices.forEach(function(service) { %>
							<tr>
								<td><%= service.name %></td>
								<td><%= service.type === null ? "" : service.type %></td>
								<td><%= service.tyre_size === 16 ? service.tyre_size + '" ja alle' : service.tyre_size === 17 ? service.tyre_size+ '" ja yli' : service.tyre_size === 19 ? service.tyre_size+ '" ja yli' : "kaikki koot" %></td>
								<td><%= service.unit_price %>,00€</td>
								<td>
									<a class="ui yellow tiny button" href="/admin/services/<%= service._id %>"><i class="fa fa-edit" aria-hidden="true"></i></a>
									<form class="ui form" action="/admin/services/<%= service._id %>?_method=DELETE" method="POST">
										<div class="field">
											<input type="hidden" name="id" value="<%= service._id %>">
											<button type="submit" class="ui red tiny button"><i class="fa fa-trash" aria-hidden="true"></i></button>
										</div>
									</form>
								</td>
							</tr>
							<% }); %>
						</tbody>
					</table>
				</div>
			</div>
			<% } %>
			<% if(tyreWashServices.length > 0) { %>
			<div class="fourteen wide column">
				<div class="ui raised segment">
					<h4 class="black">Renkaiden pesu</h4>
					<table class="ui stackable orange table">
						<thead class="tablet desktop">
							<tr>
								<th>Palvelu</th>
								<th>Yksikkö</th>
								<th>Renkaan koko</th>
								<th>Hinta</th>
								<th>Muokkaa</th>
							</tr>
						</thead>
						<tbody id="datarow">
							<% tyreWashServices.forEach(function(service) { %>
							<tr>
								<td><%= service.name %></td>
								<td><%= service.type === null ? "" : service.type %></td>
								<td>kaikki koot</td>
								<td><%= service.discounted_unit_price !== 0 ? service.discounted_unit_price+",00 €" : service.unit_price+",00 €" %></td>
								<td>
									<a class="ui yellow tiny button" href="/admin/services/<%= service._id %>"><i class="fa fa-edit" aria-hidden="true"></i></a>
									<form class="ui form" action="/admin/services/<%= service._id %>?_method=DELETE" method="POST">
										<div class="field">
											<input type="hidden" name="id" value="<%= service._id %>">
											<button type="submit" class="ui red tiny button"><i class="fa fa-trash" aria-hidden="true"></i></button>
										</div>
									</form>
								</td>
							</tr>
							<% }); %>
						</tbody>
					</table>
				</div>
			</div>
			<% } %>
		</div>
	</div>
</section>